#AddExpenses

<AddExpenses>:
    name: 'add_expenses'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 20
        MDCard:
            pos_hint: {'center_y': 0.5, 'center_x': 0.5}
            md_bg_color: "skyblue"
            theme_text_color: 'Custom'
            size_hint: .9, .2
            radius: 20
            padding: 20
            elevation: 2
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    text: "This month of March"
                    font_style:'Subtitle2'
                    size_hint: .9, 0.1
                    theme_text_color: 'Custom'
                    text_color: "white"
                    valign: 'middle'
                BoxLayout:
                    orientation: 'horizontal'
                    MDLabel:
                        font_style: "H5"
                        id: expense
                        theme_text_color: 'Custom'
                        text_color: "white"
                        size_hint: 1, 1
                    MDLabel:
                        text: "PHP"
                        font_style:'Subtitle2'
                        halign: 'right'
                        size_hint: .3, 1
                        theme_text_color: 'Custom'
                        text_color: "white"
                        valign: 'middle'
        
        # Number's 1 to 9
        BoxLayout:
            orientation: 'horizontal' 
            pos_hint: {'center_x': 0.5, 'center_y': .5}
            size_hint: 0.9, 0.1
            BoxLayout:
            MDIconButton:
                id: food
                icon: 'food'
                text: "food"
                size_hint_x: 1
                padding: '5dp'
                border: [20, 20, 20, 20]
                text_color: "gray"
                theme_text_color: 'Custom'
                on_press:
                    root.icon_color(food)
            MDIconButton:
                id: acads
                size_hint_x: 1
                icon: 'school-outline'
                padding: '5dp'
                text: "acads"
                border: [20, 20, 20, 20]
                text_color: "gray"
                theme_text_color: 'Custom'
                on_press:
                    root.icon_color(acads)
            MDIconButton:
                id: transpo
                size_hint_x: 1
                icon: 'bus'
                text: "bus"
                padding: '5dp'
                border: [20, 20, 20, 20]
                text_color: "gray"
                theme_text_color: 'Custom'
                on_press:
                    root.icon_color(transpo)
            MDIconButton:
                id: others
                size_hint_x: 1
                icon: 'dots-horizontal-circle-outline'
                padding: '5dp'
                text: "others"
                text_color: "gray"
                theme_text_color: 'Custom'
                border: [20, 20, 20, 20]
                on_press:
                    root.icon_color(others)
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.5
            padding: 30
            pos_hint: {'center_x': 0.5}
            # 1-3
            BoxLayout:
                orientation: 'horizontal'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-7'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-8'                
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-9'                
            # 4-6
            BoxLayout:
                orientation: 'horizontal'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-4'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-5'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-6'

            # 7-9
            BoxLayout:
                orientation: 'horizontal'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-1'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-2'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-3'

            # C-<
            BoxLayout:
                orientation: 'horizontal'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-0'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-0'
                MDIconButton:
                    size_hint_x: 1
                    icon: 'numeric-0'
