# View Expenses

<ViewExpenses>:
    name: "view_expenses"
    listexpenses: listexpenses
    overall: overall
    MDBoxLayout:
        size_hint: 1, 1
        md_bg_color: 127/255, 61/255, 255/255, 1
        orientation: 'vertical'
        pos_hint: {'center_x': .5, 'center_y': .5}

        #Button
        MDBoxLayout:
            size_hint: .95, .1
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDRelativeLayout:
                pos_hint: {'center_y': .5}
                size_hint: 1, 1
                MDIconButton:
                    pos_hint: {'center_y': .5}
                    icon: 'arrow-left'
                    halign: 'right'
                    border: [20, 20, 20, 20]
                    text_color: 'white'
                    theme_text_color: 'Custom'
                    on_release:
                        root.back()
                MDLabel:
                    text: 'Expense'
                    halign: 'center'
                    text_color: 'white'
                    theme_text_color: 'Custom'


           
        # Inputs           
        MDBoxLayout:
            size_hint: .90, .3
            pos_hint: {'center_x': .5, 'center_y': .5}
            MDBoxLayout:
                pos_hint: {'center_y': .5}
                orientation: 'vertical' 
                size_hint: 1, None
                MDLabel:
                    pos_hint: {'center_y': .5}
                    size_hint_y: .1
                    text: "You've already spent"
                    halign: 'left'
                    font_size: '18sp'
                    text_color: 252/255, 252/255, 252/255, 1
                    opacity: 0.64
                    theme_text_color: 'Custom'
                MDLabel:
                    id: overall
                    text_color: 'white'
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    text: '0'
                    theme_text_color: 'Custom'
                    font_size: '40sp'




        # List
        CustomMDBoxLayout:
            padding: 0, 20, 0, 0 
            size_hint_y: .6
            ScrollView:
                MDList:
                    id: listexpenses
                    padding: 0


