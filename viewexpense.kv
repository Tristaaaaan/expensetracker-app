# View Expenses

<ViewExpenses>:
    name: "view_expenses"
    listexpenses: listexpenses
    overall: overall
    BoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        spacing: 15
        padding: 0, 10, 0, 0
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, .25
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            MDIconButton:
                icon: 'chevron-left'
                theme_text_color: 'Custom'
                text_color: 'gray'
                on_release: 
                    root.back()
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                size_hint_x: 0.8
                MDLabel:
                    text: "You've already spent"
                    text_color: "gray"
                    size_hint: 0.9, 0.05
                    valign: 'middle'
                    theme_text_color: 'Custom'
                    font_style: 'H6'
                MDLabel:
                    id: overall
                    text_color: "skyblue"
                    size_hint: 1, 0.05
                    valign: 'middle'
                    theme_text_color: 'Custom'
                    font_style: 'H4'
        ScrollView:
            size_hint_y: .9
            MDList:
                theme_text_color: 'Custom'
                id: listexpenses