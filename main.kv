# First Window
<FirstWindow>:
    name: "first"
    container: container
    currentmonth: currentmonth

    MDBoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        padding: 0, 20, 0, 0 
        # Card
        MDBoxLayout:
            size_hint: .9, .2
            pos_hint: {'center_y': 0.5, 'center_x': .5}
            MDCard:
                md_bg_color: 127/255, 61/255, 255/255, 1
                theme_text_color: 'Custom'
                size_hint: .9, 1
                radius: 20
                padding: 20
                elevation: 2
                MDBoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        id: currentmonth
                        text: ''
                        font_style:'Subtitle2'
                        size_hint: .9, 0.1
                        theme_text_color: 'Custom'
                        text_color: "white"
                        valign: 'middle'
                    MDBoxLayout:
                        orientation: 'horizontal'
                        MDLabel:
                            font_style: "H5"
                            id: expense
                            font_size: '40sp'
                            theme_text_color: 'Custom'
                            text_color: "white"
                            size_hint: 1, 1
                        MDLabel:
                            text: "USD"
                            font_style:'Subtitle2'
                            halign: 'right'
                            size_hint: .3, 1
                            theme_text_color: 'Custom'
                            text_color: "white"
                            valign: 'middle'    

        # Text                    
        MDBoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_y': .5, 'center_x': .5}
            size_hint: .9, .1
            MDLabel:
                text: "Today"
                text_color: "gray"
                size_hint: 0.9, 1
                pos_hint: {'center_y': .5, 'center_x': .5}
                theme_text_color: 'Custom'
                font_style: 'H4'
            MDFlatButton:
                text: 'View All'
                pos_hint: {'center_y': .5, 'center_x': .5}
                size_hint_x: 0.1, 1
                text_color: "gray"
                theme_text_color: 'Custom'
                font_style: 'Caption'
                on_release:
                    root.view()

        # List
        MDBoxLayout:
            size_hint_y: .7
            ScrollView:
                MDList:
                    id: container
                    padding: 0
    

    MDFloatingActionButton:
        icon: 'plus-thick'
        md_bg_color: [127/255, 61/255, 255/255, 1]
        pos_hint: {'center_x': .9, 'center_y': .1}
        elevation_normal: 0
        on_release:
            app.root.current = "add_expenses"
            root.manager.transition.direction = "left"


<ApproveExpense>:
    orientation: "vertical"
    size_hint: 1, None
    spacing: 10
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            AsyncImage: 
                source: './Vector.png'
        MDLabel:
            valign: 'middle'
            halign: 'center'
            text: 'Transaction has been successfully added'
            font_size: '12sp'
            bold: True




<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height
    MDCardSwipeLayerBox:

        MDIconButton:
            padding: 10
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_item(root)
            theme_text_color: 'Custom'
            text_color: 127/255, 61/255, 255/255, 1
    MDCardSwipeFrontBox:

        ListItemWithIcon:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            _no_ripple_effect: True
            CustomIconLeftWidget:
                icon: root.icon
                disabled: True
                theme_text_color: 'Custom'
                disabled_color: [253/255, 60/255, 74/255, 1]