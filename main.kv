# First Window
<FirstWindow>:
    name: "first"
    container: container
    currentmonth: currentmonth

    MDBoxLayout:
        size_hint: 1, 1
        orientation: 'vertical'
        MDCard:
            pos_hint: {'center_y': 0.85, 'center_x': .5}
            md_bg_color: 127/255, 61/255, 255/255, 1
            theme_text_color: 'Custom'
            size_hint: .9, .2
            radius: 20
            padding: 20
            elevation: 2
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    id: currentmonth
                    text: ''
                    font_style:'Subtitle2'
                    size_hint: .9, 0.1
                    theme_text_color: 'Custom'
                    text_color: "white"
                    valign: 'middle'
                BoxLayout:
                    orientation: 'horizontal'
                    MDLabel:
                        font_style: "H5"
                        id: expense
                        theme_text_color: 'Custom'
                        text_color: "white"
                        size_hint: 1, 1
                    MDLabel:
                        text: "USD"
                        font_style:'Subtitle2'
                        halign: 'right'
                        size_hint: .3, 1
                        theme_text_color: 'Custom'
                        text_color: "white"
                        valign: 'middle'
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'center_y': 0.78, 'center_x': .5}
            size_hint: .9, .2
            MDLabel:
                text: "Today"
                text_color: "gray"
                size_hint: 0.9, .2
                theme_text_color: 'Custom'
                font_style: 'H4'
            MDFlatButton:
                text: 'View All'
                pos_hint: {'x': 0, 'y': -0.02}
                size_hint: 0.1, .27
                text_color: "gray"
                theme_text_color: 'Custom'
                font_style: 'Caption'
                on_release:
                    root.view()
        MDBoxLayout:
            #size_hint: .9, .6
            ScrollView:
                MDList:
                    id: container
                    padding: 0
    

        MDFloatingActionButton:
            icon: 'plus-thick'
            elevation_normal: 12
            pos_hint: {'x': .75, 'y':.05}
            on_release:
                app.root.current = "add_expenses"
                root.manager.transition.direction = "left"


<ApproveExpense>:
    orientation: "vertical"
    size_hint: 1, None
    spacing: 10
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            AsyncImage: 
                source: './Vector.png'
        MDLabel:
            valign: 'middle'
            halign: 'center'
            text: 'Transaction has been successfully added'
            font_size: '12sp'
            bold: True




<SwipeToDeleteItem>:
    size_hint_y: None
    height: content.height
    MDCardSwipeLayerBox:

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: root.remove_item(root)

    MDCardSwipeFrontBox:

        ListItemWithIcon:
            id: content
            text: root.text
            secondary_text: root.secondary_text
            _no_ripple_effect: True
            CustomIconLeftWidget:
                icon: root.icon
                disabled: True
                theme_text_color: 'Custom'
                radius: [10, 5, 10, 20]
                disabled_color: [253/255, 60/255, 74/255, 1]